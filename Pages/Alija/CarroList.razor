
@inherits CarroListBase
@inject NotificationService NS
@using DashBoard.Modelos

@if (LosCarros != null && !Leyendo)
{
    <RadzenDataGrid @ref="CarrosGrid"
                    AllowFiltering="true" AllowPaging="true" PageSize="50"
                    AllowSorting="true" AllowColumnResize="true"
                    ExpandMode="DataGridExpandMode.Single" AllowGrouping="false"
                    EditMode="DataGridEditMode.Single" AllowColumnPicking="true"
                    Data="@LosCarros" TItem="Z205_Carro"
                    RowUpdate="@OnUpdateRow" RowCreate="@OnCreateRow" EmptyText="No hay registros">

        <HeaderTemplate>
            @if (ElUser.Nivel > 4 && EmpresaActiva.OrgId.Length > 30)
            {
                <RadzenButton Icon="plus" style="margin-bottom: 10px"
                              ButtonStyle="ButtonStyle.Info" Click="InsertRow">
                    Agregar Carro
                </RadzenButton>
            }
            else if (EmpresaActiva.OrgId.Length < 30)
            {
                <RadzenLabel>Es necesario que seleciones una empresa activa en Informacion>Empresa Activa</RadzenLabel>
            }
            <RadzenButton Icon="refresh" style="margin-bottom: 10px"
                          ButtonStyle="ButtonStyle.Success" Click="LeerCarros">
                Actualizar
            </RadzenButton>
        </HeaderTemplate>

        <Columns>


            <RadzenDataGridColumn TItem="Z205_Carro" Title="Id" Filterable="false"
                                  Width="40px">
                <Template Context="datos">
                    <RadzenLabel>@(LosCarros.IndexOf(datos) + 1)</RadzenLabel>

                </Template>

            </RadzenDataGridColumn>

            <RadzenDataGridColumn TItem="Z205_Carro" Title="Pedimento"
                                  Filterable="false" Resizable="true" Width="170px">

                <Template Context="datos">
                    <RadzenLabel style="white-space:pre-wrap; line-height: initial">
                        @datos.Pedimento
                    </RadzenLabel>
                </Template>

                <EditTemplate Context="datos">
                    <RadzenTextArea Name="Pedimento" @bind-Value="datos.Pedimento"
                                    Placeholder="Pedimento" Style="width: 100%;" />
                </EditTemplate>
            </RadzenDataGridColumn>

            <RadzenDataGridColumn TItem="Z205_Carro" Title="Tractor"
                                  Filterable="true" Width="150px">
                <Template Context="datos">
                    <radzenlabel>@datos.Tractor</radzenlabel>
                </Template>
                <EditTemplate Context="datos">
                    <RadzenTextBox Name="Tractor" @bind-Value="datos.Tractor" Style="width: 100%" /> <br>
                    <RadzenLengthValidator Component="Tractor" Min="1" Max="75"
                                           Text="El numero del tractor es requerido" />
                </EditTemplate>
            </RadzenDataGridColumn>

            <RadzenDataGridColumn TItem="Z205_Carro" Title="Num Caja"
                                  Filterable="false" Resizable="true" Width="150px">

                <Template Context="datos">
                    <RadzenLabel style="white-space:pre-wrap; line-height: initial">
                        @datos.Caja1
                    </RadzenLabel>
                </Template>

                <EditTemplate Context="datos">
                    <RadzenTextBox Name="Caja1" @bind-Value="datos.Caja1" Style="width: 100%"
                                   Placeholder="Caja 1 Requerido" /> <br>
                    <RadzenLengthValidator Component="Caja1" Min="1" Max="75"
                                           Text="El nombre del chofer es requerido" />
                </EditTemplate>
            </RadzenDataGridColumn>

            <RadzenDataGridColumn TItem="Z205_Carro" Title="Num     Cajas 2"
                                  Filterable="false" Resizable="true" Width="150px">

                <Template Context="datos">
                    <RadzenLabel style="white-space:pre-wrap; line-height: initial">
                        @datos.Caja2
                    </RadzenLabel>
                </Template>

                <EditTemplate Context="datos">
                    <RadzenTextBox Name="Caja2" @bind-Value="datos.Caja2"
                                   Placeholder="Caja 2 Opcional" />
                </EditTemplate>
            </RadzenDataGridColumn>

            <RadzenDataGridColumn TItem="Z205_Carro" Title="Otras Cajas"
                                  Filterable="false" Resizable="true" Width="150px">

                <Template Context="datos">
                    <RadzenLabel style="white-space:pre-wrap; line-height: initial">
                        @datos.CajaOtros
                    </RadzenLabel>
                </Template>

                <EditTemplate Context="datos">
                    <RadzenTextBox Name="CajaOtros" @bind-Value="datos.CajaOtros"
                                   Placeholder="mas cajas opcional" />
                </EditTemplate>
            </RadzenDataGridColumn>


            <RadzenDataGridColumn TItem="Z205_Carro" Context="sampleBlazorModelsSampleOrder"
                                  Filterable="false" Sortable="false" TextAlign="TextAlign.Center"
                                  Width="250px" Title="Estado">
                <Template Context="datos">
                    @if (datos.Estado > 3)
                    {
                        <label></label>
                    }
                    else
                    {
                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Secondary"
                                      Class="m-1" Click="@((args) => EditRow(datos))" Visible="@(!Editando)" />

                    }
                    @if (datos.Status)
                    {
                        <b>Activo</b>
                    }
                    else
                    {
                        <b>Suspendido</b>
                    }


                </Template>

                <EditTemplate Context="datos">

                    @if (datos.Estado == 2 && ElUser.Nivel > 4)
                    {
                        <div style="white-space:pre-wrap">
                            Borrar este registro?
                            <RadzenSelectBar @bind-Value=@datos.Status TValue="bool"
                                             Placeholder="Borrar este registro?">
                                <Items>
                                    <RadzenSelectBarItem Text="No" Value="true" />
                                    <RadzenSelectBarItem Text="Si" Value="false" />
                                </Items>
                            </RadzenSelectBar>
                        </div>
                    }

                    <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success"
                                  Class="m-1" Click="@((args) => SaveRow(datos))" />


                    <RadzenButton Icon="close" ButtonStyle="ButtonStyle.Danger" Class="m-1"
                                  Click="@((args) => CancelEdit(datos))" />
                </EditTemplate>

            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
}
else
{
    <div class="spinner">

    </div>
}

@code {


    void Cancelar()
    {
        //OrgNew = new();
        CarroToInsert = new();
    }

    Z205_Carro CarroToInsert = new();

    async Task EditRow(Z205_Carro car)
    {

        await CarrosGrid!.EditRow(car);
        Editando = !Editando;
    }

    async void OnUpdateRow(Z205_Carro car)
    {
        try
        {
            if (car == CarroToInsert) CarroToInsert = null!;


            Editando = !Editando;
            ApiRespuesta<Z205_Carro> resultado = await Servicio("Update", car);

            string txt = $"{TBita}, Folio: {ElFolio.FolioNum} numero de camion: {car.Tractor},";
            txt += $"Caja 1: {car.Caja1} caja 2: {car.Caja2}";
            txt += string.IsNullOrEmpty(car.CajaOtros) ? "" :
                $"Cajas adicionales {car.CajaOtros}";
            txt += $"Pedimento : {car.Pedimento}, Estado: Nuevo, Estatus: Activo";

            if (resultado.Exito)
            {
                ShowNotification(ElMsn("info", "Actualizo",
                    $"Se actualizo la info de Folio {ElFolio.FolioId} Tractor {car.Tractor}", 0));
                txt = $"Se actualizo la informacion {TBita}," + txt;
                Z190_Bitacora bitaTemp = MyFunc.MakeBitacora(ElUser.UserId, ElUser.OrgId, txt,
                    Corporativo, ElUser.OrgId);
                await BitacoraAll(bitaTemp);
            }
            else
            {
                string etxt = $"Error No Se actualizo la info de ";
                foreach (var e in resultado.MsnError)
                { etxt += $", {e}"; }

                ShowNotification(ElMsn("Error", "Error", etxt, 0));
                txt = $"Error, No se actualizo un registro de carro {txt} {etxt}";

                Z192_Logs logTemp = MyFunc.MakeLog(ElUser.UserId, ElUser.OrgId, txt,
                    Corporativo, ElUser.OrgId);
                await LogRepo.Insert(logTemp);
            }
        }
        catch (Exception ex)
        {
            Z192_Logs logTemp = MyFunc.MakeLog(ElUser.UserId, ElUser.OrgId,
                    $"Error, No fue posible actualizar carro, {TBita}, {ex}",
                    Corporativo, ElUser.OrgId);
            await LogRepo.Insert(logTemp);
        }

    }

    async Task SaveRow(Z205_Carro car)
    {
        await CarrosGrid!.UpdateRow(car);
    }

    void CancelEdit(Z205_Carro car)
    {
        if (car == CarroToInsert) CarroToInsert = null!;

        Editando = !Editando;
        CarrosGrid!.CancelEditRow(car);
    }

    async Task InsertRow()
    {
        CarroToInsert = new Z205_Carro();
        CarroToInsert.FolioId = ElFolio.FolioId;
        CarroToInsert.Estado = 1;
        Editando = !Editando;
        await CarrosGrid!.InsertRow(CarroToInsert);

    }
    async void OnCreateRow(Z205_Carro car)
    {
        try
        {
            if (car == CarroToInsert) CarroToInsert = null!;

            Editando = !Editando;
            ApiRespuesta<Z205_Carro> resultado = await Servicio("Insert", car);

            string txt = $"{TBita}, Folio: {ElFolio.FolioNum} numero de camion: {car.Tractor},";
            txt += $"Caja 1: {car.Caja1} caja 2: {car.Caja2}";
            txt += string.IsNullOrEmpty(car.CajaOtros) ? "" :
                $"Cajas adicionales {car.CajaOtros}";
            txt += $"Pedimento : {car.Pedimento}, Estado: Nuevo, Estatus: Activo";

            if (resultado.Exito)
            {
                ShowNotification(ElMsn("Exito", "Nuevo Carro",
                    $"Se creo un nuevo registro de Folio: {ElFolio.FolioNum} Tractor: {car.Tractor}", 0));

                Z190_Bitacora bitaTemp = MyFunc.MakeBitacora(ElUser.UserId, ElUser.OrgId, txt,
                    Corporativo, ElUser.OrgId);
                await BitacoraAll(bitaTemp);
            }
            else
            {
                string etxt = $"Error NO se creo el nuevo registro de Carro ";
                foreach (var e in resultado.MsnError)
                { etxt += $", {e}"; }

                ShowNotification(ElMsn("Error", "Error", etxt, 0));
                txt = $"{TBita}, Error, No se creo un nuevo registro de carro " + txt + ", ";
                txt += etxt;
                Z192_Logs logTemp = MyFunc.MakeLog(ElUser.UserId, ElUser.OrgId, txt,
                    Corporativo, ElUser.OrgId);
                await LogRepo.Insert(logTemp);
            }
            //await CarrosGrid!.Reload();
        }
        catch (Exception ex)
        {
            Z192_Logs logTemp = MyFunc.MakeLog(ElUser.UserId, ElUser.OrgId,
                    $"Error, No fue posible crear un registro Carro, {TBita}, {ex}",
                    Corporativo, ElUser.OrgId);
            await LogRepo.Insert(logTemp);
        }

    }

    public void ShowNotification(NotificationMessage message)
    {
        NS.Notify(message);
    }

}
